{
  "compilerOptions": {
    "rootDir": "./src",        
    "outDir": "./dist",        

    "target": "es2019",        
    "module": "commonjs",      
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "strict": true,            
    "noImplicitAny": true,     

    "sourceMap": true,         
    "declaration": false,      
    "resolveJsonModule": true  
  },
  "include": ["src"],         
  "exclude": ["node_modules", "dist"] 
}
